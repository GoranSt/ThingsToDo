@model ThingsToDo.App.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LoginRegister.cshtml";
}

<div class="logo">
    <a href="~/Account/Register">
        <img src="~/Content/images/Logo/things-to-do.gif" alt="" class="img" />
    </a>
</div>
<div class="content" style="margin-top:-39px;">
    @if (!Request.IsAuthenticated)
    {

        <!-- BEGIN REGISTRATION FORM -->

        using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "register-form", style = "display: block;", id = "frmRegisterUser" }))
        {

            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <h3>Sign Up</h3>
            <p> Enter your personal details below: </p>

            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Email</label>
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control placeholder-no-fix", placeholder = "Email" })
                   

                </div>
            </div>

            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">First Name</label>
                <div class="input-icon">
                    <i class="fa fa-font"></i>

                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control placeholder-no-fix", placeholder = "First Name" })
                 

                </div>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Last Name</label>
                <div class="input-icon">
                    <i class="fa fa-font"></i>

                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control placeholder-no-fix", placeholder = "Last Name" })
                    

                </div>
            </div>

            <div class="form-group">
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Password</label>
                    <div class="input-icon">
                        <i class="fa fa-lock"></i>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control placeholder-no-fix", placeholder = "Password" })
                      

                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
                    <div class="controls">
                        <div class="input-icon">
                            <i class="fa fa-check"></i>
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control placeholder-no-fix", placeholder = "Confirm Password" })
                          

                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button id="register-back-btn" type="button" class="btn red btn-outline" onclick="window.location.href='/Account/Login'"> Back </button>
                    <button type="submit" id="btnRegisterUser" class="btn green pull-right"> Sign Up </button>
                </div>
            </div>
        }
    }
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
